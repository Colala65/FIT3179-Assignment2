{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "font": "Open Sans"
  },
  "width": 790,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Colala65/FIT3179-Assignment2/main/Visualisation-Assignment2/data/meat_data_cleaned.csv"   
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {"input": "range", "min": 1990, "max": 2020, "step": 1, "name": "Year: "}
    },
    
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Americas",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels":[
          "Show All",
          "Americas",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_selection"},
    {"filter": "datum['GDP per capita'] > 0"},
    {"filter": "datum['Consumption per capita'] > 1"},
    {"filter": "Continent_selection == null || datum.continent == Continent_selection"}
  ],
  "encoding": {
    "x": {
      "field": "GDP per capita",
      "type": "quantitative",
      "axis": {"tickCount": 4, "titleFontSize": 13, "labelFontSize": 12},
      "scale": {"type": "log", "domain": [0.01, 200000]}
    },
    "y": {
      "field": "Consumption per capita",
      "aggregate": "sum",
      "type": "quantitative",
      "title": "Consumption (kg per person)",
      "axis": {"tickCount": 2, "titleFontSize": 13, "labelFontSize": 12},
      "scale": {"type": "log", "domain": [0.01, 500]}
    }
  },

  "layer": [
    {
      "mark": "circle",
      "encoding": {

        "color": {
            "field": "continent",
            "type": "nominal",
            "title": "Continent",
            "legend":{"titleFontSize": 13, "labelFontSize": 12},
            "scale": {
              "domain": [
                "Americas",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#a65628"
              ]
            }
          },
         
        "opacity": {
          "value": 0.6
        },

        "tooltip": [
          {"field": "Year", "type": "quantitative"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "GDP per capita", "type": "quantitative", "format": ",.2f"},
          {"field": "Consumption per capita", "type": "quantitative", "format": ",.2f", "title": "Consumption (kg per person)"}
          ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -5,
        "fontSize": 11
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition":{
            "test": "datum.Country == 'Australia'",
            "value": 1 
          },
          "value": 0 
        }
      }
      
    }
  ]
}
