{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Meat Consumption and GDP per capita (2020)",
  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "font": "Open Sans"
  },
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Colala65/FIT3179-Assignment2/main/Visualisation-Assignment2/data/meat_consumption_GDP_2020.csv"   
  },

  "transform": [
    {"filter": "datum['GDP per capita'] > 0"},
    {"filter": "datum['Meat consumption'] > 0"}
  ],
  
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "GDP per capita",
          "type": "quantitative",
          "axis": {"tickCount": 4},
          "scale": {"type": "log", "domain": [1, 10000000]}
        },
        "y": {
          "field": "Meat consumption",
          "type": "quantitative",
          "title": "Consumption (kg per person)",
          "axis": {"tickCount": 4},
          "scale": {"type": "log", "domain": [1, 1000000]}
        },
        "color": {
          "field": "Country",
          "type": "nominal"
        },
        "opacity": {
          "value": 0.6
        },

        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {"field": "Meat consumption", "type": "quantitative", "format": ","}
          ]
         
      }
    }
  ]
}
