{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Meat Consumption (1990â€“2030)",
  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "font": "Open Sans"
  },
  "width": 790,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Colala65/FIT3179-Assignment2/main/Visualisation-Assignment2/data/meat_data_cleaned.csv"   
  },

  "transform": [
    {"filter": "datum['Consumption'] > 0"},
    {"filter": "datum['Country'] == 'WORLD'"}
  ],
  
  "encoding": {
    "x": {
    "field": "Year",
    "type": "temporal",
    "timeUnit": "year",
    "title": "Year",
    "axis": {"tickCount": {"step": 5, "interval": "year"}, "titleFontSize": 13, "labelFontSize": 11.5}
    }
  },
  "layer": [
    {
      "encoding": {
        "color": {"field": "Type", "type": "nominal", "title": "Meat Type",
          "legend":{"titleFontSize": 13, "labelFontSize": 12}, "scale": {"range": ["#bf5b17", "#d62728", "#ff7f0e", "#1f77b4"]}
        },
        "y": {"field": "Consumption", "type": "quantitative", "title": "Meat Consumption (tonnes)",
          "axis": {"tickCount": 6, "titleFontSize": 13, "labelFontSize": 11.5}}
      },
      "layer": [
        {"mark": "line"},
        {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
      ]
    },
    {
      "transform": [{"pivot": "Type", "value": "Consumption", "groupby": ["Year"]}],
      
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "Beef", "type": "quantitative", "format": ",.0f"},
          {"field": "Pig", "type": "quantitative", "format": ",.0f"},
          {"field": "Poultry", "type": "quantitative", "format": ",.0f"},
          {"field": "Sheep", "type": "quantitative", "format": ",.0f"}
        ]
      },
      "params": [{
        "name": "hover",
        "select": {
          "type": "point",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "clear": "mouseout"
        }
      }]
    },
    {
      "mark": {"type": "rule", "color": "#fad027", "size": 2},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"}
      },
      "data":{
        "values": [
          {"Year": "2021"}
        ]
      }
    }
  ]
}
