{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Meat Consumption around the world (1961-2017)",
  "width": 850,
  "height": 500,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Year_selection",
      "value": 2017,
      "bind": {"input": "range", "min": 1961, "max": 2017, "step": 1, "name": "Year: "}
    }
  ],

  "layer":[
    {
      "data": {
          "url": "https://raw.githubusercontent.com/Colala65/FIT3179-Assignment2/main/Visualisation-Assignment2/js/ne_110m_admin_0_countries.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [{
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
      }],
      "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white",
          "strokeWidth": 0.8
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Colala65/FIT3179-Assignment2/main/Visualisation-Assignment2/data/meat_consumption_cleaned.csv"   
      },
      
      "transform": [{
          "lookup": "Code",
          "from": {
              "data": {
              "url": "https://raw.githubusercontent.com/Colala65/FIT3179-Assignment2/main/Visualisation-Assignment2/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson","feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.ISO_A3"
            },
            "as": "geo"
          },
          {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.8
        },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {"field": "Consumption", "type": "quantitative", "title": "Consumption (kg per person)"},

        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Consumption", "type": "quantitative", "title": "Consumption per population"}
        ]
      }
    }
  ]
}
