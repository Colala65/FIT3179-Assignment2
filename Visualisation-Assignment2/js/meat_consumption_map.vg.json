{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Meat Consumption around the World (1961-2017)",
  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "font": "Open Sans"
  },
  "width": 1170,
  "height": 80,
  "data": {"url": "./data/total_tourists_by_year_output.csv"},
  "transform": [{"filter": "year(datum.year) >= 1991"}],
  "layer": [
    {
      "params": [
        {
          "name": "brush",
          "value": "2019",
          "select": {
            "type": "point",
            "fields": ["year"],
            "encodings": ["x"],
            "on": "mouseover",
            "nearest": true,
            "toggle": false,
            "clear": false
          }
        }
      ],
      "mark": "point",
      "encoding": {
        "x": {"field": "year", "type": "ordinal", "axis": null},
        "opacity": {"value": 0}
      }
    },
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {"field": "year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "count",
          "type": "quantitative",
          "title": "Total yearly visitors",
          "axis": {"format": ".1s"}
        },
        "color": {"value": "orange"}
      }
    },
    {
      "transform": [{"filter": {"param": "brush"}}],
      "encoding": {
        "x": {"field": "year", "type": "ordinal"},
        "color": {"value": "#b22222"}
      },
      "layer": [
        {"mark": {"type": "rule", "strokeWidth": 2}},
        {
          "mark": {
            "type": "text",
            "align": "center",
            "fontWeight": "bold",
            "fontSize": 12
          },
          "encoding": {"text": {"field": "year"}, "y": {"value": -30}}
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "fontWeight": 100,
            "fontSize": 11
          },
          "encoding": {
            "text": {
              "value": {
                "expr": "'Total visitors: ' + format(datum.count, ',')"
              }
            },
            "y": {"value": -15}
          }
        }
      ]
    }
  ]
}
